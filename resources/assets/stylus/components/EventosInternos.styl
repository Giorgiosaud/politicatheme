.Eventos__Container
	margin 1em 0
.Eventos__Internos
	margin-top 1em
.Evento
	margin: 0 0 1em 0
.Evento__imagen
	img
		width 100%
		height auto
.Eventos__Internos__Categorias__Lista
	background: $grayCategory
	padding-bottom: 1em
	& > ul
		list-style: none
		text-transform: uppercase
		& > li
			padding: 1em 0
			& > a
				color: #000
				&:hover
					text-decoration: none
					border-bottom: solid $azulHover 3px

.Eventos__Internos__Categorias__Titulo
	background: $azulHover
	text-transform: uppercase
	color: white
	padding: 0.5em

.Eventos__Internos__Categorias
	margin: 1em 0
.Evento__Elemento
	background: $azulHover
.btn-evento
	background: #fff
	border-radius 0
	margin-top 1em
	color: $azulHover
	border-color: #2e6da4
	a
		color: $azulHover
		&:hover,&:active
			text-decoration none
.Evento__botonLeerMas
	margin: 0 1em 1em 0
	padding: 0.5em 1.5em

.Evento__resumen
	height: 70px
	margin: 0 0 0 1em
	padding: 0.5em
	overflow hidden
	font-weight 100

.Evento__Elemento
	color: #FFF


.Evento__titulo
	text-transform: uppercase
	font-size: 1.3em
	text-align: center
	padding:0.5em 0.5em 0 0.5em
	border-bottom: solid 1px #FFF
	display: inline-block
	width: 100%
	& > .fecha
		font-weight: 600
		float: left
	& > .hora
		font-weight: 100
		float: right



