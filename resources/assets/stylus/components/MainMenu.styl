.navbar{
	margin-bottom 0
}
ul
	&.dropdown-menu
		font-size: 1em
.navbar-politica{
	background-color $azulPolitica
	border-color darken($azulPolitica,10)
	border-radius 0
	font-size 0.8em
}
.navbar-nav > li > a {
	// background-color: #e7e7e7;
	color: #FFF;
	text-transform uppercase;
}
.nav .open > a, .nav .open > a:hover, .nav .open > a:focus,.nav > li > a:hover, .nav > li > a:focus{
	background-color darken($azulPolitica,10)
}
.nav .open>a>span{
			transform rotate(90deg)
}
.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus{
	background: transparent;
	color: #FFF;
}
.dropdown-menu{
	background: rgba(0, 0, 0, 0.8);
	padding:0
	margin 0
	border-radius 0
}
.No-Margin-Padding{
	margin 0
	padding 0
}
.dropdown-menu>li:hover{
	background $azulHover
}
.navbar-toggle .icon-bar{
	background #FFF
}
li.dropdown-submenu
	position relative
	padding: 5px 0;
	border-bottom: 1px solid #000;
	&:hover
		background $azulHover
.dropdown-menu > li > a{
	color #FFF
}
.caret
transform:rotate(-90deg)
.dropdown-submenu{
	position:relative;
}
.dropdown-submenu>.dropdown-menu{
	top:0;
	left:100%;
	-webkit-border-radius:0 6px 6px 6px;
	-moz-border-radius:0 6px 6px 6px;
	border-radius:0 6px 6px 6px;
}
.dropdown-submenu:active>.dropdown-menu, .dropdown-submenu:hover>.dropdown-menu {
	display: block;
}
.dropdown-submenu>a:after{
	display:block;
	content:" ";
	float:right;
	width:0;
	height:0;
	border-color:transparent;
	border-style:solid;
	border-width:5px 0 5px 5px;
	border-left-color:#cccccc;
	margin-top:5px;
	margin-right:-10px;
}
.dropdown-submenu:active>a:after{
	border-left-color:#ffffff;
}
.dropdown-menu > .active > a, .dropdown-menu > .active > a:hover, .dropdown-menu > .active > a:focus{
	background-color $azulActive
}
.menu-item.active
	background: $azulPolitica;
	background: -moz-linear-gradient(top,  $azulPolitica 50%, darken($azulPolitica,50) 160%);
	background: -webkit-linear-gradient(top,  $azulPolitica 50%,darken($azulPolitica,50) 160%);
	background: linear-gradient(to bottom,  $azulPolitica 50%,darken($azulPolitica,50) 160%);
	
.dropdown-menu>.menu-item.active
	background-color $azulActive
.FlexHeader
	align-items: center;
	justify-content: space-between;
	flex-direction: column;
	.logo,.Searcher
		width 100%
		aligin-items center
		justify-content center

.Searcher
	flex 4
	.spec
		float right
		width 100%
		// display flex !important
		#menu-main-menu
			width 100%
			.menu-item
				.active
					background-color $azulActive
				a
		.form-inline
			width 100%
			// display flex
			// flex 1
		& >.navbar-form
			& > .form-group
				& > label
					color: white
					text-transform: uppercase
					font-weight: 500
				& > .form-control
					width 100%
					border-radius: 0
					margin: 0 0 0 1em
					border: none
					background: $grayCategory
					color: white
@media (min-width:760px)
	.FlexHeader
		flex-direction:row
		.logo,.Searcher
			width 100%
			aligin-items center
			justify-content space-between
.SearchButton
	background: #005677
	color: #fff
	border: none
	font-weight: 100
	padding: 0 1em
	text-transform: uppercase
	text-align: center
.form-group.flex-group
	display flex
label
	&.labelSearch
		align-self: center


.dropdown-submenu.pull-left{
	float:none;
	}.dropdown-submenu.pull-left>.dropdown-menu{
		left:-100%;
		margin-left:10px;
		-webkit-border-radius:6px 0 6px 6px;
		-moz-border-radius:6px 0 6px 6px;
		border-radius:6px 0 6px 6px;
	}
