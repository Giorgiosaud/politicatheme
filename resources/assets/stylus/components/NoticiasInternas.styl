.Noticias__Internas__Container
	margin 1em 0 0
.Noticias__Internas
	margin-top 1em
.Noticias__Internas__Categorias__Lista
	background: $grayCategory
	padding-bottom: 1em
	& > ul
		list-style: none
		text-transform: uppercase
		& > li
			padding: 1em 0
			& > a
				color: #000
				&:hover
					text-decoration: none
					border-bottom: solid $azulHover 3px

.Noticias__Internas__Categorias__Titulo
	background: $azulHover
	text-transform: uppercase
	color: white
	padding: 0.5em
